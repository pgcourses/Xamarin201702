<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Day1.View.AbsoluteExample"
             Title="AbsoluteLayout">
    <AbsoluteLayout Padding="50">
        <BoxView Color="Red" AbsoluteLayout.LayoutBounds="10,10,200,100" />
        <BoxView Color="Yellow" AbsoluteLayout.LayoutBounds="20,20,100,200" />
        <Label TextColor="Blue" AbsoluteLayout.LayoutBounds="30,30, Autosize, Autosize"
               Text="Ez egy hosszabb szöveg, amit mindenképpen szerettem volna megjeleníteni, és ha már itt vagyok meg is teszem"
               />
    </AbsoluteLayout>
</ContentPage>